<h2>Dashboard</h2>

<div class="row">

  <div class='col-md-8 deck-mgmt'>
    <h3>Make Decks</h3>

    <%= link_to "Create new deck", new_deck_path, class: 'btn btn-default' %>

    <h3>My Decks</h3>
    <ul class="no-bullets">
    <% @decks.each do |deck| %>
      <li class='small-card dash-list'><%= link_to deck.name, deck_path(deck.id) %>
        <%= link_to edit_deck_path(deck.id), class: 'edit' do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
        <%= link_to delete_deck_path(deck.id), class: 'delete', method: 'delete', data: { confirm: "Are you sure you want to delete this deck?" } do %>
          <span class="glyphicon glyphicon-remove-sign"></span>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>

  <div class='col-md-4'>
    <h3>Edit Profile</h3>
    <% if flash[:alert] %>
    <p class='notice'><%= flash[:alert] %></p>
    <% end %>
    <%= render "shared/signup" %>
  </div>
</div>
