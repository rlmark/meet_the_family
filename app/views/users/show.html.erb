<h2>Dashboard</h2>

<div class='deck-mgmt'>
  <h3>My Family Decks</h3>

  <%= link_to "Create new deck", new_deck_path, class: 'btn btn-default' %>

  <h4>My decks:</h4>
  <ul class="no-bullets">
  <% @decks.each do |deck| %>
    <li class='small-card'><%= link_to deck.name, deck_path(deck.id) %></li>
  <% end %>
  </ul>

</div>

<h3>Edit Profile</h3>
<% if flash[:alert] %>
<p class='notice'><%= flash[:alert] %></p>
<% end %>
<%= render "shared/signup" %>
