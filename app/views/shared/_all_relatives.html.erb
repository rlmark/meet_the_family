<h2>All relatives</h2>
<ul class='no-bullets'>
  <% @relatives.each do |relative| %>
  <li class='small-card'><%= relative.firstname %> <%= relative.lastname %>
    <%= link_to update_relative_path( :add => relative.id), method: 'patch' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <% end %>
  </li>
  <% end %>
</ul>
