<h2>All relatives</h2>
<ul class='no-bullets'>
  <% @relatives.each do |relative| %>
  <li class='small-card'>
    <%= link_to update_card_path( :add => relative.id), method: 'patch' do %>
      <span class="glyphicon glyphicon-plus-sign add"></span>
    <% end %>
    <%= link_to edit_relative_path(relative.id), class: 'edit' do %>
    <span class="glyphicon glyphicon-edit"></span>
    <% end %>
    <%= link_to delete_relative_path(relative.id), class: 'delete', method: 'delete', data: { confirm: "Are you sure you want to delete this relative?" } do %>
    <span class="glyphicon glyphicon-remove-circle"></span>
    <% end %>
    <%= relative.firstname %> <%= relative.lastname %>
  </li>
  <% end %>
</ul>
